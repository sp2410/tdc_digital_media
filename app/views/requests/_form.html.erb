<%= bootstrap_form_for @request  do |form| %>   
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">    
    <%= form.text_field :name, id: :request_name, :label => "Let's start with your name (*)"  %>
  </div>

  <div class="field">    
    <%= form.text_field :company_name, id: :request_company_name, :label => "What's your company name?(*)
"  %>
  </div>

  <div class="field">    
    <%= form.text_field :email, id: :request_email, :label => "Your email address? (*)"  %>
  </div>

  <div class="field">    
    <%= form.text_area :descriotion, id: :request_descriotion, :label => "Tell us about your project (*)"  %>
  </div>

  <div class="field">        
    <%= form.select :timeline, ['ASAP','1-3 Months', '6-12 Months'] , id: :request_timeline, :label => "Project Timeline (*)" %>
  </div>

  <div class="field">    
    <%= form.text_field :reference, id: :request_reference, :label => "How did you hear about us? (*)"  %>
  </div>

  <div class="field">    
    <%= form.text_area :other, id: :request_other, :label => "Anything else you'd like to share? (*)"  %>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-default btn-lg" %>
  </div>
<% end %>
