<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company name</th>
      <th>Email</th>
      <th>Descriotion</th>
      <th>Timeline</th>
      <th>Reference</th>
      <th>Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.company_name %></td>
        <td><%= request.email %></td>
        <td><%= request.descriotion %></td>
        <td><%= request.timeline %></td>
        <td><%= request.reference %></td>
        <td><%= request.other %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

