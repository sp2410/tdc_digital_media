
  <div class = "headerdiv">     
        <div class = "col-lg-6 col-md-12 col-sm-12 col-xs-12" id = "leftheaderdiv">
          <img src="https://s3-us-west-1.amazonaws.com/tdcdigitalmedia/tdclogo3d2.svg" id = "mainlogo"/>
        </div>
        <div class = "col-lg-6 col-md-12 col-sm-12 col-xs-12" id = "leftheaderdiv">
          <p id = "headerdivp">OUR BLOG</p>        
        </div>
  </div>

  <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12" id = "formdiv" >

    <div class = "col-sm-3 col-md-3 col-lg-3 col-xs-3">
    </div>

    <div class = "col-sm-6 col-md-6 col-lg-6 col-xs-6" style = "text-align: center; ">
        


      <% @blogs.each do |blog| %>
        <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12" style = "border: 2px solid #1CB5E0; margin: 1em 0; padding: 1em;">

          <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12" style = "text-align: left; margin: 1em; color: #1CB5E0;">
            <h2><%= blog.title %></h2>
          </div>

          <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12" style = "text-align: left; margin: 1em; color: black;">
            <%= strip_tags(blog.body).truncate(358) %>
          </div>

          <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12" >

            <div class = "col-sm-8 col-md-8 col-lg-8 col-xs-8" >
              Created at: <%= blog.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class = "col-sm-4 col-md-4 col-lg-4 col-xs-4" >
              <%= link_to 'Show', blog, class: "btn btn-info btn-xs" %>
            </div>

            
          </div>          

        </div>

      <% end %>
              
    </div>

    <div class = "col-sm-3 col-md-3 col-lg-3 col-xs-3">
    </div>

  </div>




